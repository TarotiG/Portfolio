@page
@model Frontend.Pages.AdminModel
@{
	Layout = "./Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Admin Page";
}
<!-- Project section -->
<div class="admin-widgets-container">
    <div class="admin-container">
        <form method="POST" asp-page-handler="Project">
            <h4 class="text-2xl font-bold mb-4">Project toevoegen</h4>
            <div class="mb-4">
                <label for="projectName" class="block text-sm font-medium text-gray-700">Naam Project</label>
                <input type="text" id="projectName" name="NewProject.Name" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required />
            </div>
            <br />
            <div class="mb-4">
                <label for="projectDescription" class="block text-sm font-medium text-gray-700">Project Omschrijving</label>
                <textarea id="projectDescription" name="NewProject.Description" rows="3" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required></textarea>
            </div>
            <br />
            <div class="mb-4">
                <label for="projectFunction" class="block text-sm font-medium text-gray-700">Functie tijdens project</label>
                <select id="projectFunction" name="NewProject.Function" class="mt-1 block w-full p-2 border border-gray-300 rounded-md">
                    <option value="Developer">Developer</option>
                    <option value="Tester">Tester</option>
                    <option value="Test-automation Engineer">Test-automation Engineer</option>
                </select>
            </div>
            <br />
            <div class="mb-4">
                <label for="projectStartDate" class="block text-sm font-medium text-gray-700">Startdatum</label>
                <input type="date" id="projectStartDate" name="NewProject.StartDate" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required />
            </div>
            <br />
            <div class="mb-4">
                <label for="projectEndDate" class="block text-sm font-medium text-gray-700">Einddatum</label>
                <input type="date" id="projectEndDate" name="NewProject.EndDate" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required />
            </div>
            <br />
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Gebruikte technologieën</label>
                <div style="display: flex; flex-wrap: wrap; gap: 12px;">
                    @for (int i = 0; i < Model.Technologies.Count; i++)
                    {
                        <div style="flex: 0 0 calc(33.333% - 8px); display: flex; align-items: center;">
                            <input type="checkbox"
                                   id="tech_@Model.Technologies[i].Id"
                                   name="SelectedTechnologyIds"
                                   value="@Model.Technologies[i].Id"
                                   class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                            <label for="tech_@Model.Technologies[i].Id"
                                   class="ml-2 text-sm text-gray-700">
                                @Model.Technologies[i].TechnologyName
                            </label>
                        </div>
                    }
                </div>
            </div>
            <br />
            <div class="mb-4">
                <label for="personalProject" class="block text-sm font-medium text-gray-700">Persoonlijk project</label>
                <select id="personalProject" name="NewProject.PersonalProject" class="mt-1 block w-full p-2 border border-gray-300 rounded-md">
                    <option value="true">Ja</option>
                    <option value="false">Nee</option>
                </select>
            </div>
            <br />
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">Project toevoegen</button>
        </form>
    </div>
    <!-- Certificate section -->
    <div class="admin-container">
        <form method="POST" asp-page-handler="Certificate" enctype="multipart/form-data">
            <h4 class="text-2xl font-bold mb-4">Certficaat toevoegen</h4>
            <div class="mb-4">
                <label for="certificateName" class="block text-sm font-medium text-gray-700">Naam Certificaat</label>
                <input type="text" id="certificateName" name="NewCertificate.Name" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required />
            </div>
            <br />
            <div class="mb-4">
                <label for="certDesc" class="block text-sm font-medium text-gray-700">Certificaat Omschrijving</label>
                <textarea id="certDesc" name="NewCertificate.Description" rows="3" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required></textarea>
            </div>
            <br />
            <div class="mb-4">
                <label for="certIssueDate" class="block text-sm font-medium text-gray-700">Afgiftedatum</label>
                <input type="date" id="certIssueDate" name="NewCertificate.IssueDate" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required />
            </div>
            <div class="mb-4">
                <label for="certFile" class="block text-sm font-medium text-gray-700">Bestand certificaat</label>
                <input type="file" id="certFile" name="file" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required />
            </div>
            <br />
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">Certificaat toevoegen</button>
        </form>
    </div>
    <div class="admin-container">
        <form method="POST" asp-page-handler="Technology">
            <h4 class="text-2xl font-bold mb-4">Technologie toevoegen</h4>
            <div class="mb-4">
                <label for="technologyName" class="block text-sm font-medium text-gray-700">Naam Technologie</label>
                <input type="text" id="technologyName" name="NewTechnology.TechnologyName" class="mt-1 block w-full p-2 border border-gray-300 rounded-md" required />
            </div>
            <br />
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">Technologie toevoegen</button>
        </form>
    </div>
</div>
