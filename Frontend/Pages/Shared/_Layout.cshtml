<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DevPortfolio</title>
    <script type="importmap"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
</head>
<body class="bg-gray-900 text-white font-sans">
    <!-- Hero Section -->
    <section class="text-center py-20 bg-gradient-to-b from-gray-900 to-gray-800">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Hi, ik ben Tyron Gysbertha 👋</h1>
        <br />
        <img src="#" alt="Foto Tyron toevoegen"/>
        <br />
        <p class="text-lg md:text-xl text-gray-300 max-w-2xl mx-auto">
            Test-automation engineer en developer met een passie voor waarborging van kwalitatieve software, DevOps en moderne webtechnologieën.
        </p>
    </section>

    <!-- About -->
    <section id="about" class="py-16 bg-gray-800">
        <div class="max-w-6xl mx-auto px-6">
            <h2 class="text-3xl font-semibold mb-6 text-center">👨‍💻 Over mij</h2>

            <div class="flex flex-col md:flex-row gap-8 items-start">
                <!-- Links: Tekst -->
                <div class="flex-1">
                    <p class="text-gray-300 text-lg">
                        @Model.AboutMeText
                    </p>
                    <br/>
                    <p class="text-gray-300 text-lg">
                        @Model.AboutMeText2
                    </p>
                    <br/>
                    <p class="text-gray-300 text-lg">
                        @Model.AboutMeText3
                    </p>
                </div>

                <!-- Rechts: Cards Grid -->
                <div class="flex-shrink-0" style="width: 40rem;">
                    <div class="grid grid-cols-2 gap-6 items-start">
                        <!-- Card 1 (kolom 1, rij 1) -->
                        <div class="card bg-gray-700 text-white rounded-lg shadow-lg"
                             style="box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);"
                             onmouseenter="this.style.boxShadow='0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.3)'; this.style.transform='translateY(-4px)';"
                             onmouseleave="this.style.boxShadow='0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2)'; this.style.transform='translateY(0)';">
                            <div class="card-body p-6">
                                <h3 class="card-title text-xxl-center text-black font-bold mb-2">TMAP Gecertificeerd</h3>
                                <img src="" alt="TMAP"/>
                                <h6 class="card-subtitle mb-3 text-gray-400">Subtitle</h6>
                                <p class="card-text text-gray-300 mb-4">Some quick example text to build on the card title.</p>
                                <a href="#" class="card-link text-blue-400 hover:underline">Link →</a>
                            </div>
                        </div>

                        <!-- Card 2 (kolom 2, rij 1) - met margin-top voor offset -->
                        <div class="card bg-gray-700 text-white rounded-lg shadow-lg" 
                             style="margin-top: 3rem; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);"
                             onmouseenter="this.style.boxShadow='0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.3)'; this.style.transform='translateY(-4px)';"
                             onmouseleave="this.style.boxShadow='0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2)'; this.style.transform='translateY(0)';">
                            <div class="card-body p-6">
                                <h3 class="card-title text-xxl-center text-black font-bold mb-2">Technical and experienced</h3>
                                <h6 class="card-subtitle mb-3 text-gray-400">Subtitle</h6>
                                <p class="card-text text-gray-300 mb-4">Some quick example text to build on the card title.</p>
                                <a href="#" class="card-link text-blue-400 hover:underline">Link →</a>
                            </div>
                        </div>

                        <!-- Card 3 (kolom 1, rij 2) -->
                        <div class="card bg-gray-700 text-white rounded-lg shadow-lg"
                             style="box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);"
                             onmouseenter="this.style.boxShadow='0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.3)'; this.style.transform='translateY(-4px)';"
                             onmouseleave="this.style.boxShadow='0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2)'; this.style.transform='translateY(0)';">
                            <div class="card-body p-6">
                                <h3 class="card-title text-xxl-center text-black font-bold mb-2">Progressive mindset</h3>
                                <h6 class="card-subtitle mb-3 text-gray-400">Subtitle</h6>
                                <p class="card-text text-gray-300 mb-4">Some quick example text to build on the card title.</p>
                                <a href="#" class="card-link text-blue-400 hover:underline">Link →</a>
                            </div>
                        </div>

                        <!-- Card 4 (kolom 2, rij 2) - met margin-top voor offset -->
                        <div class="card bg-gray-700 text-white rounded-lg shadow-lg"
                             style="margin-top: 3rem; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);"
                             onmouseenter="this.style.boxShadow='0 20px 25px -5px rgba(0, 0, 0, 0.4), 0 10px 10px -5px rgba(0, 0, 0, 0.3)'; this.style.transform='translateY(-4px)';"
                             onmouseleave="this.style.boxShadow='0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2)'; this.style.transform='translateY(0)';">
                            <div class="card-body p-6">
                                <h3 class="card-title text-xxl-center text-black font-bold mb-2">Quality above all</h3>
                                <h6 class="card-subtitle mb-3 text-gray-400">Subtitle</h6>
                                <p class="card-text text-gray-300 mb-4">Some quick example text to build on the card title.</p>
                                <a href="#" class="card-link text-blue-400 hover:underline">Link →</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--Certificaten-->
    <section id="certificates" class="py-16 bg-gray-800">
        <div class="max-w-4xl mx-auto px-6 text-center">
            <h2 class="text-2xl font-semibold mb-4">📜 Behaalde certificaten</h2>
            <!-- Carousel -->
            <div id="certificateGallery" class="carousel slide" data-bs-ride="carousel">

                <!-- Indicators/dots -->
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#certificateGallery" data-bs-slide-to="0" class="active"></button>
                    <button type="button" data-bs-target="#certificateGallery" data-bs-slide-to="1"></button>
                    <button type="button" data-bs-target="#certificateGallery" data-bs-slide-to="2"></button>
                    <button type="button" data-bs-target="#certificateGallery" data-bs-slide-to="3"></button>
                    <button type="button" data-bs-target="#certificateGallery" data-bs-slide-to="4"></button>
                    <button type="button" data-bs-target="#certificateGallery" data-bs-slide-to="5"></button>


                </div>

                <!-- Slideshow foto's vervangen met pdf bestanden -->
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="../pdf-files/rpa-developer-level-3-1.png" alt="RPA lvl 3" class="d-block" style="width:100%">
                    </div>
                    <div class="carousel-item">
                        <img src="../pdf-files/rpa-developer-level-2-1.png" alt="RPA lvl 2" class="d-block" style="width:100%">
                    </div>
                    <div class="carousel-item">
                        <img src="../pdf-files/rpa-developer-level-1-1.png" alt="RPA lvl 1" class="d-block" style="width:100%">
                    </div>
                    <div class="carousel-item">
                        <img src="../pdf-files/foundational-c-sharp.png" alt="Foundational C#" class="d-block" style="width:100%">
                    </div>
                    <div class="carousel-item">
                        <img src="../pdf-files/tmap-qcft-1.png" alt="TMAP" class="d-block" style="width:100%">
                    </div>
                    <div class="carousel-item">
                        <img src="../pdf-files/selenium-tester-foundation-1.png" alt="Selenium" class="d-block" style="width:100%">
                    </div>
                </div>

                <!-- Left and right controls/icons -->
                <button class="carousel-control-prev" type="button" data-bs-target="#certificateGallery" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#certificateGallery" data-bs-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </button>
            </div>
        </div>
    </section>


    <!-- Projecten; modal popup maken hiervoor -->
    <section class="py-16 bg-gray-800">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </section>

    <!-- Contact -->
    <section id="contact" class="py-16 bg-gray-900">
        <div class="max-w-xl mx-auto px-6 text-center">
            <h3 class="text-3xl font-semibold mb-4">📬 Contact</h3>
            <p class="text-gray-400 mb-6">Heb je een project of wil je samenwerken? Stuur me gerust een bericht.</p>
            <a href="mailto:jouw.email@domein.nl" class="inline-block bg-blue-500 hover:bg-blue-600 py-3 px-6 rounded-lg text-white">
                Stuur een e-mail
            </a>
        </div>
    </section>

    <footer class="text-center text-gray-500 py-6 text-sm">
        © 2025 Tyron Gysbertha – Alle rechten voorbehouden
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="~/js/site.js" asp-append-version="true"></script> *@
	<script src="~/js/index.bundle.js"></script>
    <script src="~/js/certificate.bundle.js"></script>
    <script src="~/js/certificateGallery.bundle.js"></script>
    <script src="~/js/projectCodeView.bundle.js"></script>
    <script src="~/js/projectDescription.bundle.js"></script>
    <script src="~/js/project.bundle.js"></script>
    <script src="~/js/pdfViewer.bundle.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>