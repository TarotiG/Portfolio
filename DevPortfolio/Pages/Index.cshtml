@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<header>
    <h1>Tyron Gysbertha</h1>
    <h3>Test Automation Engineer and Developer</h3>
    <p>Stukje over mezelf tikken</p>
</header>
<section id="section-projecten">
    <h3>Mijn projecten</h3>
    <div id="list-projecten">
        @foreach (var project in Model.Projecten)
        {
            <div onclick="loadProject('@project.Description')">
                @project.Name
                @project.Description
            </div>
        }
    </div>
    <hr/>
    <div id="demo-project">
        <h4 id="project-name"></h4>
        <p id="project-desc"></p>
        <iframe id="project-iframe" style="width:100%; height:600px; border:1px solid #ccc;"></iframe>

    </div>
</section>

@section Scripts {
    <script>
        function loadProject(description) {
            document.getElementById('demo-project').style.display = 'block';
            document.getElementById('project-desc').textContent = description;
            document.getElementById('project-iframe').src = "/projecten/mock-website/home.html";
        }
    </script>
}

